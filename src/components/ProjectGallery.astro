---
import { Image } from 'astro:assets';

interface Props {
  images: ImageMetadata[];
}

const { images } = Astro.props;
---

{images && images.length > 0 && (
  <section class="mt-16 border-t border-slate-200 pt-12">
    <h2 class="text-3xl font-bold text-slate-900 mb-8">Galer√≠a del Proyecto</h2>
    <div class="columns-1 md:columns-2 lg:columns-3 gap-4 space-y-4">
      {images.map((img, index) => (
        <div class="break-inside-avoid rounded-xl overflow-hidden bg-slate-100 shadow-sm hover:shadow-md transition duration-300">
          <Image 
            src={img} 
            alt={`Imagen ${index + 1} del proyecto`} 
            width={800} 
            class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500" 
            quality="mid"
          />
        </div>
      ))}
    </div>
  </section>
)}
